<%= simple_form_for @post do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
  </div>
  <div class="form-inputs">
    <%= f.input :subtitle %>
  </div>
  <div class="form-inputs">
    <%= f.rich_text_area :rich_content %>
  </div>
  <div class="form-inputs">
    <%= f.rich_text_area :rich_snippet %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
